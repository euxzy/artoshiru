{
  "name": "@artoshiru/svelte",
  "version": "0.0.0",
  "scripts": {
    "build": "vite build && npm run prepack",
    "prepare": "(svelte-kit sync && bun run build) || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "shadcn": "bun x shadcn-svelte@latest"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "src",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./styles": "./src/app.css",
    "./ui": {
      "types": "./dist/components/ui/index.d.ts",
      "svelte": "./dist/components/ui/index.js",
      "import": "./dist/components/ui/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "svelte": "./dist/hooks/index.js",
      "import": "./dist/hooks/index.js"
    }
  },
  "peerDependencies": {
    "@iconify/svelte": "^5.0.0",
    "@internationalized/date": "^3.8.1",
    "@lucide/svelte": "^0.515.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "bits-ui": "^2.8.6",
    "clsx": "^2.1.1",
    "svelte": "^5.28.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0"
  },
  "devDependencies": {
    "@artoshiru/eslint-config": "*",
    "@eslint/compat": "^1.3.1",
    "@iconify/svelte": "^5.0.0",
    "@internationalized/date": "^3.8.1",
    "@lucide/svelte": "^0.515.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.20.7",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.1.4",
    "bits-ui": "^2.8.6",
    "clsx": "^2.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "publint": "^0.3.2",
    "svelte": "^5.28.2",
    "svelte-check": "^4.1.6",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.3"
  },
  "keywords": [
    "svelte"
  ]
}
